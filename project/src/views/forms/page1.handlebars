    <div class="line {{#if (gt currentPage 1)}}filled{{/if}}"></div>
    <div class="step {{#if (eq currentPage 2)}}active{{/if}}">2</div>
    <div class="line {{#if (gt currentPage 2)}}filled{{/if}}"></div>
    <div class="step {{#if (eq currentPage 3)}}active{{/if}}">3</div>
    <div class="line {{#if (gt currentPage 3)}}filled{{/if}}"></div>
    <div class="step {{#if (eq currentPage 4)}}active{{/if}}">4</div>
